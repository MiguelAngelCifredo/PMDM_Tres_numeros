<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".MainActivity"
    tools:ignore="NestedWeights">

    <LinearLayout
        android:id="@+id/filaNumero1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvNumero1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Número 1:" />

        <EditText
            android:id="@+id/etNumero1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:digits="0123456789"
            android:hint="Introduzca un número"
            android:inputType="number"
            android:textAlignment="textEnd" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/filaNumero2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvNumero2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Número 2:" />

        <EditText
            android:id="@+id/etNumero2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:digits="0123456789"
            android:hint="Introduzca un número"
            android:inputType="number"
            android:textAlignment="textEnd" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/filaNumero3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvNumero3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Número 3:" />

        <EditText
            android:id="@+id/etNumero3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:digits="0123456789"
            android:hint="Introduzca un número"
            android:inputType="number"
            android:textAlignment="textEnd" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/filaNumeros"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvNumPrimero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="36dp"
            android:layout_weight="2"
            android:textAlignment="center"
            android:textColor="#FF5722"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvNumSegundo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="36dp"
            android:layout_weight="2"
            android:textAlignment="center"
            android:textColor="#FF5722"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvNumTercero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="36dp"
            android:layout_weight="2"
            android:textAlignment="center"
            android:textColor="#FF5722"
            android:textSize="34sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/filaOperadores1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnMayor"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:backgroundTint="#4CAF50"
            android:text="MAYOR"
            app:cornerRadius="0dp" />

        <Button
            android:id="@+id/btnMenor"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:backgroundTint="#4CAF50"
            android:text="MENOR"
            app:cornerRadius="0dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/filaOperadores2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnOrdenarAsc"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:backgroundTint="#3F51B5"
            android:text="ORD ASC"
            app:cornerRadius="0dp" />

        <Button
            android:id="@+id/btnOrdenarDesc"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:backgroundTint="#3F51B5"
            android:text="ORD DESC"
            app:cornerRadius="0dp" />

    </LinearLayout>

    <Button
        android:id="@+id/btnBorrarTodo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_weight="1"
        android:backgroundTint="#E91E63"
        android:text="BORRAR TODO"
        app:cornerRadius="0dp" />

</LinearLayout>